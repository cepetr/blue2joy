{
    "editor.formatOnSave": true,
    "editor.rulers": [
        100
    ],
    "cmake.generator": "Ninja",
    "cmake.showSystemKits": false,
    "cmake.useCMakePresets": "never",
    "cmake.buildDirectory": "${workspaceFolder}/build",
    "cmake.configureArgs": [
        "-B build",
        "-G Ninja",
        "-DCMAKE_C_COMPILER_WORKS=ON"
    ],
    "files.associations": {
        "*.h": "c"
    }
}