{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": [
      "es2022",
      "DOM",
      "DOM.Iterable"
    ],
    // App build is handled by Vite; declarations not needed unless publishing a library
    "declaration": false,
    "declarationMap": false,
    // Let Vite handle the output; keep TS focused on type-checking only
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "bundler",
    "useDefineForClassFields": false,
    "sourceMap": true,
    "inlineSources": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "plugins": [
      {
        "name": "ts-lit-plugin",
        "strict": true
      }
    ],
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": []
}
